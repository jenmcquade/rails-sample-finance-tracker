<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong> <%= friend.full_name %></td>
            <td><strong>Email: </strong> <%= friend.email %></td>
            <td><strong>Actions: </strong>
                <%= link_to "View Profile", 
                            '#', 
                            class: "btn btn-sm btn-success" %>
            </td>
            <td>  
              <% if current_user.can_track_friend?(friend) %>
                <%= link_to 'Add friend', 
                  friendships_path(user: current_user,
                    friend: friend),
                  class: "btn btn-sm btn-success",
                  method: :post %>
              <% else %>
                <span class="badge badge-secondary">
                  You are friends with <%= friend.first_name %>
                </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>